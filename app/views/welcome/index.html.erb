<header>
  <div class="container" id="maincontent" tabindex="-1">
      <div class="row">
          <div class="col-lg-12">
              <div class="intro-text">
                  <h1 class="name">Welcome to ComreCat!</h1>
                  <hr class="star-light">
                  <span class="skills">Your Community - Skill/Resource - Exchange!</span>
              </div>
          </div>
      </div>
  </div>
</header>
  <div class="container-fluid">
    <div class="row sign-up-row">
      <div class="col-lg-4">
      </div>
      <div class="sign-in-button col-lg-2">
        <a href="#" data-toggle="modal" data-target="#login-modal"><h1>Login</h1></a>
      </div>
      <div class="sign-in-button col-lg-2">
        <a href="/users/new"><h1>Sign-Up</h1></a>
      </div>
      <div class="col-lg-4">
      </div>
    </div>
  </div>
  <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;" id="login-modal">
      <div class="modal-dialog">
  				<div class="loginmodal-container">
  					<h1>Login to Your Account</h1><br>
  				  <%= form_tag "/sessions" do %>
    					<input id="user" type="text" name="session[username]" placeholder="Username">
    					<input id="password" type="password" name="session[password]" placeholder="Password">
    					<input type="submit" name="login" class="login loginmodal-submit" value="Login">
  				  <% end %>

  				  <div class="login-help">
  					<a href="users#new">Register</a> - <a href="#">Forgot Password</a>
  				  </div>
  				</div>
  		</div>
  </div>
